<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="366dp"
        android:layout_height="112dp"
        android:layout_margin="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:paddingStart="9dp"
        android:paddingLeft="9dp"
        android:paddingTop="3dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="9dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="72dp"
            android:layout_height="94dp"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/restoname1"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/imageView1"
            android:layout_toRightOf="@+id/imageView1"
            android:paddingLeft="15dp"
            android:textColor="#333"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptiontype1"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/restoname1"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/imageView1"
            android:layout_toRightOf="@+id/imageView1"
            android:paddingLeft="15dp"
            android:text="Snack/Food + Comfort food"
            android:textColor="#333"
            android:textSize="13dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:layout_below="@+id/descriptiontype1"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/imageView1"
            android:layout_toRightOf="@+id/imageView1">

            <RatingBar
                android:id="@+id/MyRating1"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:foregroundGravity="center"
                android:isIndicator="true"
                android:max="5"
                android:scaleX="1"
                android:scaleY="1"
                android:stepSize="0.1" />

            <TextView
                android:id="@+id/reviewsCount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/MyRating1"
                android:layout_toRightOf="@+id/MyRating1"
                android:gravity="center_vertical"
                android:paddingLeft="9dp"
                android:text="Snack"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textdistance1"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/reviewsCount1"
                android:layout_toRightOf="@+id/reviewsCount1"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingLeft="4dp"
                android:text="45 km"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/marker1"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="-3dp"
                android:layout_toEndOf="@+id/reviewsCount1"
                android:layout_toRightOf="@+id/reviewsCount1"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/ic_pin_foreground"
                tools:ignore="ContentDescription" />

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>
